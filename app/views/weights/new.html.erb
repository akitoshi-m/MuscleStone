<div class="weight-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>自分の体重を入力しよう！</h1>
        <%= form_for @weight do |f| %>
          <div class="form-group">
            <%= f.label :体重入力, class: 'text-black' %>
            <%= f.number_field :weight, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :日付入力, class: 'text-black' %>
            <%= f.date_select :measure_date, class: 'form-control' %>
          </div>
          <%= f.submit '完了', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

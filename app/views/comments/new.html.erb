<div class="workout-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">コメント追加</h1>
        <%= form_for @comment, url: '/comments/new', method: :post do |f| %>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          <%= f.hidden_field :workout_id, :value => @workout_id %>
          <% if logged_in? %>
            <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

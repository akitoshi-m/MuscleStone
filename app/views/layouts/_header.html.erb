<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
<% end %>
<!-- ナビゲーションバー -->
<nav class="navbar navbar-default navbar-fixed navbar-transparent">
  <div class="container">
    
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path do %>
        <span><%= image_tag "icons/MuscleStone-logo-red.png", alt: "MuscleStone", class: "navbar-logo navbar-left" %></span>
      <% end %>
    </div>

    <!-- ログインの有無で条件分岐 -->
    <% if logged_in? %>
      <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
        <li>
          <%= link_to workouts_path do %>
            <span><i class="fas fa-comments">投稿一覧</i></span>
          <% end %>
        </li>
        <li>
          <%= link_to users_path do %>
            <span><i class="fas fa-users">ユーザー一覧</i></span>
          <% end %>
        </li>
        <li>
          <%= link_to likes_index_path do %>
            <span><i class="fas fa-heart">いいね一覧</i></span>
          <% end %>
        </li>
        <li>
          <%= link_to new_workout_path do %>
            <span><i class="fas fa-file-signature">投稿する</i></span>
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user.id) do %>
            <span><i class="fas fa-user">マイページ</i></span>
          <% end %>
        </li>
      <% else %>

      <% end %>
    </ul>
  </div>
</nav>

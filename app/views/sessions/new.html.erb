<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 users-new-container">
        <h1 class="text-center text-white users-new-container">ログイン</h1>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "text-white" %>
            <%= f.text_field :email, class: "form-control", id: "session_email" %>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "text-white" %>
            <%= f.password_field :password, class: "form-control", id: "session_password" %>
          </div>

          <%= f.submit "ログイン", class: "btn btn-block btn-red", id: "login_button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

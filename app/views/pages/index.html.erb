<!-- タイトル -->
<div class="top-wrapper text-center">
  <div class="container top-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="title">
          <h1 class="text-shadow">MuscleStone</h1>
        </div>
      </div>
      <div class="col-md-8 col-md-offset-2">
        <p class="text-shadow sub-title">常に高みを目指す貴方へ向けた筋トレ管理アプリです。</p>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <%= link_to "アカウント登録", '/users/new', class: 'btn btn-arrange btn-block btn-red' %>
        <%= link_to "ログイン", 'sessions/new', class: 'btn btn-arrange btn-block btn-red' %>
        <p class="text-general">テストログインはこちらから</p>
	      <%= render "shared/guest_login" %>
      </div>
    </div>
  </div>
</div>

<!-- サービス紹介 -->
<div class="service-introduction">
	<div class="service-title text-center">
		<h1 class="title">MuscleStoneとは</h1>
	</div>
  <div class="service-all-item">
    <div class="item">
      <div class="fas fa-comments"></div>
      <p class="explanation">①トレーニング内容を記録できるSNSサービス</p>
      <%= image_tag('icons/f_workout.png') %>
    </div>
    <div class="item">
  		<div class="fas fa-users"></div>
  		<p class="explanation">②他のユーザーと筋トレ内容を共有できる</p>
  		<%= image_tag('icons/f_user.png') %>
  	</div>
  	<div class="item">
  		<div class="fas fa-dumbbell"></div>
  		<p class="explanation">③自分専用のセットメニューを作成できる</p>
  		<%= image_tag('icons/f_menu.png') %>
  	</div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      	<div class="text-center">
      	  <%= render "shared/guest_login" %>
        </div>
      </div>
    </div>
  </div>
</div>
